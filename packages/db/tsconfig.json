{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "bundler",
      "target": "ES2022",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "outDir": "dist"
    },
    "include": ["index.ts", "prisma/**/*", "generated/**/*", "prisma.config.ts"],
    "exclude": ["node_modules", "dist"]
  }
  